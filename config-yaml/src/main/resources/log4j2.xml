<?xml version="1.0" encoding="UTF-8" ?>

<Configuration>
  <Appenders>
    <Console name="CONSOLE" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH\:mm\:ss.SSS} %5p %c{1}\.%M\:%L - %m %X%n"/>
    </Console>
  </Appenders>

  <Loggers>
    <Logger name="com" level="INFO">
      <AppenderRef ref="CONSOLE"/>
    </Logger>
  </Loggers>  
</Configuration>